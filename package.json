{
  "name": "photo-uploader",
  "version": "2.0.0",
  "description": "Photo Auto Uploader with LUT Filter Support",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "keywords": [
    "electron",
    "photo",
    "uploader",
    "auto-upload",
    "lut",
    "filter",
    "color-grading"
  ],
  "author": "Ghulam",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.2",
    "chokidar": "^3.5.3",
    "form-data": "^4.0.0",
    "sharp": "^0.33.1",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "id.my.ghulam.memora",
    "productName": "Memora Photo Uploader",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer.js",
      "index.html",
      "style.css",
      "icon.png",
      "memora_logo.png",
      "presets/**/*",
      "!dist/**/*",
      "!*.md",
      "!face_detector.py",
      "!requirements.txt"
    ],
    "asarUnpack": [
      "presets/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "icon.png",
      "category": "public.app-category.utilities"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "icon": "icon.png",
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
