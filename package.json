{
  "name": "photo-uploader-simple",
  "version": "3.0.0",
  "description": "Photo Auto Uploader - Simple & Fast (No Face Recognition)",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "keywords": [
    "electron",
    "photo",
    "uploader",
    "auto-upload",
    "simple",
    "fast"
  ],
  "author": "Photo Uploader Simple",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.2",
    "chokidar": "^3.5.3",
    "form-data": "^4.0.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.photouploader.simple",
    "productName": "Photo Uploader Simple",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer.js",
      "index.html",
      "style.css",
      "icon.png",
      "!dist/**/*",
      "!*.md",
      "!face_detector.py",
      "!requirements.txt"
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "icon.png",
      "category": "public.app-category.utilities"
    },
    "linux": {
      "target": "AppImage",
      "icon": "icon.png",
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
